# BLE Temperature Monitoring - Environment Variables
# These environment variables override values in config.yaml

# BLE scanning configuration
SCAN_INTERVAL_SECONDS=60
SENSORS=A4:C1:38:00:00:01,A4:C1:38:00:00:02,A4:C1:38:00:00:03,A4:C1:38:00:00:04

# Prometheus metrics push configuration
PUSH_INTERVAL_SECONDS=15
PROMETHEUS_URL=https://prometheus-prod-01-eu-west-0.grafana.net/api/prom/push
PROMETHEUS_USERNAME=123456
PROMETHEUS_PASSWORD=your-grafana-cloud-api-key-here
METRIC_NAME=ble_temperature_celsius
START_AT_EVEN_SECOND=true
BUFFER_SIZE=1000

# Logging configuration
LOG_FORMAT=console
LOG_LEVEL=info
